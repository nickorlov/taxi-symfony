{% extends 'base.html.twig' %}

{% block body %}
    <table class="table table-dark" style="margin-top: 50px">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Surname</th>
            <th scope="col">Phone</th>
            <th scope="col">Role</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <th scope="row">{{ user.id }}</th>
                <td>{{ user.name }}</td>
                <td>{{ user.surname }}</td>
                <td>{{ user.phone }}</td>
                <td>{{ user.roles[0] }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}