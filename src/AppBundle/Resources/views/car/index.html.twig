{% extends 'base.html.twig' %}

{% block title %}Cars{% endblock title %}

{% block body %}
    <table class="table table-dark">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Numbers</th>
            <th scope="col">Driver</th>
        </tr>
        </thead>
        <tbody>
        {% for car in cars %}
            <tr>
                <th scope="row">{{ car.id }}</th>
                <td>{{ car.name }}</td>
                <td>{{ car.numbers }}</td>
                <td>
                    {% for cardriver in car.drivers %}
                        {{ cardriver.name }} {{ cardriver.surname }}{% if not loop.last %},{% endif %}
                    {% endfor %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}